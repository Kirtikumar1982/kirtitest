pipeline {
    agent {
		label 'master'
	}

stages {
   stage('checkout') {
            steps {
                node('master'){
                checkout scm
               }
            }
        }

        stage('package') {
            steps {
                node('master'){
                
                sh 'mvn clean install'
               }
            }
        }
   stage('Create Docker Image') {
   steps{
   node('master') {
   sh 'chmod 777 /var/run/docker.sock'
   sh 'docker build -t kirtitest/microtest .'
   
    }
    }
    }
  }
}
