pipeline {
    agent {
		label 'master'
	}

stages {
   stage('checkout') {
            steps {
                node('master'){
                checkout scm
               }
            }
        }

        stage('package') {
            steps {
                node('master'){
                
                sh 'mvn clean install'
               }
            }
        }
   stage('Create Docker Image') {
   steps{
   node('master') {
   sh '''
    #!/bin/bash
    echo "hello team"
    
    docker build -t kirtitest/microtest .
   sh '''
    }
    }
    }
  }
}
